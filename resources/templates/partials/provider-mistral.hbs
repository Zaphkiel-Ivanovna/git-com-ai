<div id="mistral-section" class="model-section card {{#if isMistralSelected}}active{{/if}}">
    <div class="card-header">
        <svg class="card-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 3c.6 0 1.1.5 1.1 1.1v3.4c0 .6.5 1.1 1.1 1.1h3.4c.6 0 1.1.5 1.1 1.1v3.4c0 .6.5 1.1 1.1 1.1h3.4c.6 0 1.1.5 1.1 1.1v3.4c0 .6-.5 1.1-1.1 1.1H4.1a1.1 1.1 0 0 1-1.1-1.1V4.1C3 3.5 3.5 3 4.1 3H12z"></path>
        </svg>
        <h2 class="card-title">Mistral AI Configuration</h2>
    </div>
    <div class="form-group">
        <label for="mistral-model">Model:</label>
        <select id="mistral-model">
            <option value="mistral-large-latest" {{#if (eq modelConfig.model "mistral-large-latest")}}selected{{/if}}>Mistral Large</option>
            <option value="mistral-medium-latest" {{#if (eq modelConfig.model "mistral-medium-latest")}}selected{{/if}}>Mistral Medium</option>
            <option value="mistral-small-latest" {{#if (eq modelConfig.model "mistral-small-latest")}}selected{{/if}}>Mistral Small</option>
            <option value="codestral-latest" {{#if (eq modelConfig.model "codestral-latest")}}selected{{/if}}>Codestral</option>
        </select>
    </div>
    <div class="form-group">
        <label for="mistral-api-key">API Key:</label>
        <div class="api-key-container">
            <input type="password" id="mistral-api-key" value="{{mistralApiKey}}" />
        </div>
    </div>
</div>